<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.postman.costscalendar">
    <uses-sdk android:minSdkVersion="24" />
    <uses-permission android:name="android.permission.READ_SMS"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon96"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SmsParser"></activity>
        <activity android:name=".activity.Reports" />
        <activity android:name=".activity.AddItem" />
        <activity android:name=".activity.AddSubtype" />
        <activity android:name=".activity.Dict" />
        <activity android:name=".activity.AddType" />
        <activity
            android:name=".activity.AddCost"
            android:label="@string/title_activity_add_cost"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.DaysCosts" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>